{   
    "seed": 1234,
    "lr": 1e-3,
    "n_epochs": 20,
    "batch_size": 8,
    "max_input_length": 512,
    "max_output_length": 512,
    "padding": "max_length",
    "truncation": "from_end",
    "data_official": true,
    "weight_decay": 1e-4,
    "gradient_accumulation_steps": 4,
    "lora": {
        "r": 64,
        "alpha": 64,
        "dropout": 0.05,
        "bias": "none"
    },
    "output_dir": "output/0108/DialoGPT-small",
    "evaluation_strategy": "steps",
    "eval_steps": 300,
    "save_strategy": "steps",
    "save_steps": 300,
    "logging_strategy": "steps",
    "logging_steps": 300,
    "report_to": "tensorboard",
    "save_model_dir": "results/0108/DialoGPT-small",
    "logging_dir": "logs",
    "early_stopping_patience": 3,
    "metrics": ["bleu", "rouge"]
}

